# ==========================
# Server / Application
# ==========================
APP_NAME=MyNodeApp
APP_VERSION=1.0.0
PORT=5000
BASE_URL=http://localhost:5000
NODE_ENV=development

# ==========================
# Database
# ==========================
DB_TYPE=mongodb            # mongodb | mysql | postgres
DB_URI=mongodb://localhost:27017/mydatabase
MONGO_URI=mongodb://localhost:27017/mydatabase
DB_HOST=localhost
DB_PORT=27017
DB_USER=
DB_PASS=
DB_NAME=mydatabase
DB_POOL_SIZE=5

# ==========================
# JWT / Authentication
# ==========================
JWT_SECRET=supersecret
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=refreshsecret
JWT_REFRESH_EXPIRES_IN=7d

# ==========================
# Mail / SMTP
# ==========================
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=
SMTP_PASS=
MAIL_FROM_NAME=MyNodeApp
MAIL_FROM_EMAIL=noreply@example.com

# ==========================
# OTP Settings
# ==========================
OTP_COOLDOWN_MS=120000      # 2 minute (in milliseconds)
OTP_EXPIRY_MS=600000        # 10 minutes (in milliseconds)

# ==========================
# Third-party APIs
# ==========================
API_BASE_URL=https://api.example.com
API_TIMEOUT=5000
GOOGLE_MAPS_API_KEY=
STRIPE_API_KEY=
AWS_S3_KEY=

# ==========================
# Logging
# ==========================
LOG_LEVEL=info             # error | warn | info | debug
LOG_OUTPUT=console         # console | file | remote
LOG_FILE_PATH=./logs/app.log

# ==========================
# Caching
# ==========================
CACHE_TTL=3600
CACHE_PROVIDER=memory      # memory | redis
REDIS_URL=redis://localhost:6379

# ==========================
# Features / Feature flags
# ==========================
FEATURE_ENABLE_SIGNUP=true
FEATURE_ENABLE_DEBUG=false
FEATURE_ENABLE_NOTIFICATIONS=true

# ==========================
# Security
# ==========================
CORS_ORIGINS=*              # comma-separated list of allowed origins
RATE_LIMIT=100
RATE_LIMIT_WINDOW=900000    # 15 minutes in ms
ENABLE_HELMET=true

# ==========================
# File upload / Storage
# ==========================
STORAGE_LOCAL_PATH=./uploads
MAX_FILE_SIZE=5242880       # 5MB in bytes
ALLOWED_MIME_TYPES=image/jpeg,image/png,application/pdf
